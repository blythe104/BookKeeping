<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <common.yh.app.lib.ui.CustomViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <!-- 设置tabIndicator颜色-->
    <!--app:tabIndicatorColor="@color/green_color"-->
    <!--显示滚动的横线-->
    <!--app:tabIndicatorHeight="0dp"-->
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/actionBar_color"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingBottom="1dip"
        app:tabPaddingTop="2dip"
        app:tabSelectedTextColor="@color/colorPrimaryDark"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearanceInverse"
        app:tabTextColor="@color/colorGreen" />

</LinearLayout>
